<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.forkthecode.arms_client.AddMenu">

    <EditText
        android:id="@+id/addNameEditText"
        android:layout_width="match_parent"
        android:hint="Name"
        android:inputType="textPersonName"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/addPriceEditText"
        android:layout_width="match_parent"
        android:hint="Price"
        android:layout_below="@id/addNameEditText"
        android:inputType="number"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/addCategoryEditText"
        android:layout_width="match_parent"
        android:hint="Category"
        android:layout_below="@id/addPriceEditText"
        android:inputType="textPersonName"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/addDescEditText"
        android:layout_width="match_parent"
        android:hint="Description"
        android:inputType="textLongMessage"
        android:layout_below="@id/addCategoryEditText"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="SAVE"
        android:layout_below="@id/addDescEditText"
        android:onClick="save"
        android:layout_height="wrap_content" />

</RelativeLayout>
